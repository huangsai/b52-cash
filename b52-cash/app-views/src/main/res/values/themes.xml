<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="cash_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSecondaryVariant">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cash_status_bar</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cash_SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/cash_splash_window</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/cash_splash_status_bar</item>
        <item name="android:navigationBarColor">@color/cash_splash_status_bar</item>
    </style>

    <style name="cash_CommonAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/cash_PositiveButtonStyle</item>
    </style>

    <style name="cash_PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="cash_SplashDialogFragment">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>