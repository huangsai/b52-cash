<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="cash_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cash_purple_500</item>
        <item name="colorPrimaryVariant">@color/cash_purple_700</item>
        <item name="colorOnPrimary">@color/cash_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cash_teal_200</item>
        <item name="colorSecondaryVariant">@color/cash_teal_700</item>
        <item name="colorOnSecondary">@color/cash_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cash_SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/cash_splash_window</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="cash_CommonAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/cash_PositiveButtonStyle</item>
    </style>

    <style name="cash_PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="cash_SplashDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>